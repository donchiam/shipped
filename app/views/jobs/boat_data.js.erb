document.querySelector(#boat_select).addEventListener("change",function(event){
			let elResults = document.querySelector("#results");
			console.log(event);
			axios.get(`boats/${event.target.value}`).then(function(response) {
				elResults.innerText = "";
				console.log(response);
				response.data.forEach(function(job){
					elResults.innerHTML += `<div class="job"> 
					<a href="/jobs/${job.id}">${job.title}</a>
					</div>`;
				});
			});
		});